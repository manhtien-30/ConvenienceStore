<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="272dp"
    android:layout_height="360dp"
    android:background="@drawable/custom_order_grid_item"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgOrderProductImage"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtOrderProductName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:text="Coca Cola"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtOrderProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="10.000 VND"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnOrderProduct"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/login_rbcircle_2"
        android:text="Select"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
</LinearLayout>