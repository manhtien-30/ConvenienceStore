<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="830dp"
    android:layout_height="150dp"
    android:background="@drawable/login_rbcircle_3"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ManageProduct"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/supplier_supplierNameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="229dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="84dp"
        android:gravity="center_vertical"
        android:text="Supplier Name"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/supplier_supplierAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="234dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="27dp"
        android:gravity="center_vertical"
        android:text="Address"
        android:textColor="@color/grey"
        android:textSize="24sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/supplier_supplierLogo"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="640dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />


</RelativeLayout>