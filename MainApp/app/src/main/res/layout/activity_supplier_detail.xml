<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_slight"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/layouttoolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/pink_plus"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="65dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/textfunction"
            android:layout_width="371dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="25dp"
            android:paddingTop="10dp"
            android:text="Supplier Detail"
            android:textColor="@color/black"
            android:textSize="37dp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/supplier_supplierName"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="849dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="ABC"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/supplier_lbSupplierName"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="851dp"
        android:gravity="center"
        android:text="Name of Supplier:"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/supplier_lbSupplierAddress"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="740dp"
        android:gravity="center"
        android:text="Address:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/supplier_supplierEmail"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="629dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="abcd@gmail.com"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/supplier_lbSupplierEmail"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="630dp"
        android:gravity="center"
        android:text="Email:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/supplier_lbSupplierPhone"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="519dp"
        android:gravity="center"
        android:text="Phone Number:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/supplier_supplierPhoneNumber"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="520dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="0123456789"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/supplier_lbSupplierBill"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="399dp"
        android:gravity="center"
        android:text="Total Bill:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/supplier_supplierBill"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="402dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/supplier_supplierAddress"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="739dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="TPHCM"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/supplier_supplierMoney"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="352dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/text_rbcircle_white"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="50000000"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/supplier_lbSupplierMoney"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="275dp"
        android:gravity="center"
        android:text="Total Money:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/supplier_supplierImg"
        android:layout_width="227dp"
        android:layout_height="217dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="342dp"
        android:layout_marginBottom="913dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />
    <Button
        android:id="@+id/updateSupplier"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/edit_product" />

    <Button
        android:id="@+id/saveChangeSupplier"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="199dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/yes_button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/cancelChangeSupplier"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/no_button"
        android:visibility="invisible" />

    <Button
        android:id="@+id/deleteSupplier"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/delete_product" />

    <ImageButton
        android:id="@+id/call"
        android:layout_width="79dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="920dp"
        android:background="@drawable/call" />

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="79dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="192dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="1044dp"
        android:background="@drawable/chatting" />


</RelativeLayout>